<section class="gallery">
    <div class="container">
        <a href="../images/hello.jpg" class="gallery__hello">
            <h1>Hi this is my gallery</h1>
        </a>
        <ul class="gallery__list" data-list>
            {% for item in list %}
                <li class="gallery__items">
                    <a href="{{ item.url_full }}" class="gallery__links">
                        <img src="{{ item.url_preview }}" alt="{{ item.alt }}">
                    </a>
                </li>
            {% endfor %}
        </ul>

        <div class="gallery__lightbox" data-lightbox>
            <div class="gallery__overlay" data-overlay></div>
            <figure>
                <span class="gallery__prev" data-prev>prev</span>
                <span class="gallery__next" data-next>next</span>
                <button class="gallery__auto js-menu-toggle nav--nojs" data-auto></button>
                <img src="">
            </figure>
        </div>
    </div>
</section>